@model CandidateQualifications.Models.Candidate
@using CandidateQualifications.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Form to Add and Edit Candidate Details-->
<div class="container">
    <div class="form-horizontal">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 border-bottom">
            <h2>Candidate Details</h2>
        </div>
        <form asp-controller="Home" asp-action="SaveEmployeeDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label col-md-2">First Name</label>
                <div class="col-md-10">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Last Name</label>
                <div class="col-md-10">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Address</label>
                <div class="col-md-10">
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Contact</label>
                <div class="col-md-10">
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Gender</label>
                <div class="col-md-10">
                    <label>
                        <input asp-for="Gender" type="radio" value="Female" />Female
                    </label>
                    <label>
                        <input asp-for="Gender" type="radio" value="Male" />Male
                    </label><br />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Date Of Birth</label>
                <div class="col-md-10">
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Nationality</label>
                <div class="col-md-10">
                    <select asp-for="Nationality" asp-items="Html.GetEnumSelectList<Nationalities>()" class="form-control">
                        <option selected="selected" value="" disabled>Please Select</option>
                    </select>
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Qualification</label>
                <div class="col-md-10">
                    <select asp-for="QualificationId" asp-items="ViewBag.QualificationId" class="form-control">
                        <option selected="selected" value="" disabled>Please Select</option>
                    </select>
                    <span asp-validation-for="QualificationId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="@Model.AcceptTerm" type="checkbox" />
                    <label class="control-label ">I accept terms and conditions</label>
                    <span asp-validation-for="AcceptTerm" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

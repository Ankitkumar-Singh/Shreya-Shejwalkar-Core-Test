@model IEnumerable<CandidateQualifications.Models.Candidate>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Displaying list of candidates-->
<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 border-bottom">
        <h2>Candidates List</h2>
    </div>
    <form asp-action="Index" asp-controller="Candidate" method="post">
        <div class="row input-group">
            <input type="text" name="search" id="search" class="form-control"/>
            <div class="input-group-btn">
                <input type="submit" value="search" class="btn btn-info"/>
            </div>
        </div>
    </form>
    <div class="action">
        <a asp-controller="Candidate" asp-action="SaveCandidateDetails" class="btn btn-info ">Add Candidate</a>
    </div>
    <table class="table table-hover">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/user.png" class="img-thumbnail" alt="Responsive Image" width="100" height="100">
                </td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>
                    <a asp-controller="Candidate" asp-action="SaveCandidateDetails" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Candidate" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success" >View</a>
                    <a asp-controller="Candidate" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }       
    </table>
</div>

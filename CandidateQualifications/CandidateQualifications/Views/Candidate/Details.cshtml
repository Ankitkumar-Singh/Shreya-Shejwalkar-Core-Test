@model CandidateQualifications.Models.Candidate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 border-bottom">
        <h2>Candidate Details</h2>
    </div>
    <div class="list-group-item ">Details</div>
    <ul class="list-group">
        <li class="list-group-item ">
            <div class="container" style="max-width:100%">
                <div class="row">
                    <div class=" col-md-2">
                        <img src="~/images/user.png" class="img-thumbnail" alt="Responsive Image" width="100" height="100">
                    </div>
                    <div class=" col-md-10">
                        <div class="candidateName">
                            <b>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</b>
                        </div><br />
                        <div class="row">
                            <div class="col-md-4">
                                <label>Gender</label><br />
                                <label>DateOfBirth</label><br />
                                <label>Email</label><br />
                                <label>Qualification</label><br />
                                <label>Contact</label><br />
                                <label>Address</label><br />
                                <label>AcceptTerm</label><br />
                            </div>
                            <div class="col-md-6">
                                <label> @Html.DisplayFor(model => model.Gender)</label><br />
                                <label>@Html.DisplayFor(model => model.DateOfBirth)</label><br />
                                <label> @Html.DisplayFor(model => model.Email)</label><br />
                                <label> @Html.DisplayFor(model => model.Qualification.Title)</label><br />
                                <label>@Html.DisplayFor(model => model.Contact)</label><br />
                                <label> @Html.DisplayFor(model => model.Address)</label><br />

                                @if (Model.AcceptTerm == true)
                                {<label>Yes</label>}
                                else
                                {<label>No</label>}<br />
                            </div>
                        </div>
                        <a asp-action="Index" class="btn btn-info">Back</a>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>

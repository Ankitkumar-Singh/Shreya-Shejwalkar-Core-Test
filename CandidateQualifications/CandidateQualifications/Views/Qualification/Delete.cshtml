@model CandidateQualifications.Models.Qualification
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Delete Confirmation-->
<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 ">
        <h2>Delete Details</h2>
    </div>
    <h5>Are you sure you want to delete?</h5>
    <table class="table table-hover">
        <tr>
            <td>Qualification</td>
            <td> @Html.DisplayFor(model => model.Title)</td>
        </tr>
        <tr>
            <td>Passing Year</td>
            <td> @Html.DisplayFor(model => model.PassingYear)</td>
        </tr>
        <tr>
            <td>Description</td>
            <td> @Html.DisplayFor(model => model.Description)</td>
        </tr> 
    </table>
    <form asp-controller="Home" asp-action="Delete" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" id="addemp" />
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>

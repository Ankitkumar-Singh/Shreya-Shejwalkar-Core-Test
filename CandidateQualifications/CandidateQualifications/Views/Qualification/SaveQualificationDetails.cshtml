@model CandidateQualifications.Models.Qualification
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Form to Add and Edit Qualification Details-->
<div class="container">
    <div class="form-horizontal">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-2 mb-3 border-bottom">
            <h2>Qualification Details</h2>
        </div>
        <form asp-controller="Home" asp-action="SaveEmployeeDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group">
                <label asp-for="PassingYear" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="PassingYear" asp-items="ViewBag.PassingYear" class="form-control">
                        <option selected="selected" value="" disabled>Please Select</option>
                    </select>
                    <span asp-validation-for="PassingYear" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
